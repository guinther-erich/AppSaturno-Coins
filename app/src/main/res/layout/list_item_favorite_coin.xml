<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/card_favorite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/back_fav"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/coin_name_favorite"
            android:layout_width="120dp"
            android:layout_height="26dp"
            android:fontFamily="@font/roboto"
            android:text="@string/titulo_coin"
            android:textColor="#F3F3F3"
            android:textSize="18sp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coin_sub_name_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#F3F3F3"
            android:fontFamily="@font/roboto"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintLeft_toLeftOf="@id/coin_name_favorite"
            app:layout_constraintRight_toRightOf="@id/coin_name_favorite"
            app:layout_constraintTop_toBottomOf="@id/coin_name_favorite"
            tools:text="BTC" />

        <TextView
            android:id="@+id/coin_value_favorite"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"
            android:contentDescription="@string/valor_coin"
            android:text="@string/valor_coin"
            android:textColor="#F3F3F3"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/coin_sub_name_favorite"
            app:layout_constraintRight_toRightOf="@id/coin_sub_name_favorite"
            app:layout_constraintTop_toBottomOf="@id/coin_sub_name_favorite" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/coin_icon_favorite"
        android:src="@drawable/bitcoin_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="@id/card_favorite"
        app:layout_constraintTop_toTopOf="@id/card_favorite"
        />
</androidx.constraintlayout.widget.ConstraintLayout>